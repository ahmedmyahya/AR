<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Model - <%= model.name %></title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body class="<%= user && user.theme === 'dark' ? 'dark' : '' %>">
    <%- include('partials/header') %>

    <main class="container">
      <h1>Edit Model: <%= model.name %></h1>

      <% if (error) { %>
      <div class="error-message"><%= error %></div>
      <% } %>

      <form
        action="/edit-model/<%= model.id %>"
        method="POST"
        class="model-form"
      >
        <div class="form-group">
          <label for="name">Model Name:</label>
          <input
            type="text"
            id="name"
            name="name"
            value="<%= model.name %>"
            required
          />
        </div>
        <div class="form-group">
          <label for="tags">Tags (comma-separated):</label>
          <input
            type="text"
            id="tags"
            name="tags"
            value="<%= model.tags.join(', ') %>"
            placeholder="Optional tags"
          />
        </div>
        <div class="form-group">
          <input type="checkbox" id="isLive" name="isLive" <%= model.isLive ?
          'checked' : '' %>>
          <label for="isLive" style="display: inline-block"
            >Make Live (visible in public gallery)</label
          >
        </div>
        <div class="button-group">
          <button type="submit" class="button">Save Changes</button>
          <a href="/dashboard" class="button secondary">Cancel</a>
        </div>
      </form>
    </main>

    <%- include('partials/footer') %>

    <script src="/js/theme-toggle.js"></script>
  </body>
</html>
